<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AllegroReposList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aleOrange</item>
        <item name="colorPrimaryVariant">@color/aleOrange</item>
        <item name="colorOnPrimary">@color/almostWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aleOrange</item>
        <item name="colorSecondaryVariant">@color/aleOrange</item>
        <item name="colorOnSecondary">@color/almostBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AllegroReposList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AllegroReposList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AllegroReposList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>